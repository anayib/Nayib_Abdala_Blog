<%- if controller_name != 'sessions' %>
  <%= link_to "ya estoy suscrito, quiero ingresar a mi cuenta", new_session_path(resource_name), id:"link_pago" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "No tengo cuenta aún, quiero crear una", new_registration_path(resource_name), id:"link_pago"%><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "olvidé mi clave!", new_password_path(resource_name),id:"link_pago"%><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "no he recibido instrucciones de confirmación", new_confirmation_path(resource_name), id:"link_pago" %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "no he recibido instrucciones de desbloqueo", new_unlock_path(resource_name), id:"link_pago" %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
