<%= link_to 'create new category', new_category_path,style:"float:right",class:"btn btn-success" %>
<h1>Listing categories</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_name %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?, if you click ok you will erase this category from the data base' } %></td>
       <!--  <td><%#= link_to category.name, strategies.path(filter: category.id) %></td> para poder filtrar estrategias por categorÃ­as -->
      </tr>
    <% end %>
  </tbody>
</table>

